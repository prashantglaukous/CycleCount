<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navGraph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.glaukous.views.splash.Splash"
        android:label="Splash"
        tools:layout="@layout/splash">

        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/login"
            app:launchSingleTop="true"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/home"
            app:launchSingleTop="true"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.glaukous.views.login.Login"
        android:label="Login"
        tools:layout="@layout/login" >
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/home"
            app:launchSingleTop="true"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.glaukous.views.home.Home"
        android:label="Home"
        tools:layout="@layout/home">
        <action
            android:id="@+id/action_home_to_scanner"
            app:destination="@id/scanner" />
        <action
            android:id="@+id/action_home_to_input"
            app:destination="@id/input" />
        <argument
            android:name="comingFrom"
            app:argType="string"
            android:defaultValue="Login" />
    </fragment>
    <fragment
        android:id="@+id/scanner"
        android:name="com.glaukous.views.scanner.Scanner"
        android:label="Scanner"
        tools:layout="@layout/scanner">
        <action
            android:id="@+id/action_scanner_to_input"
            app:destination="@id/input"
            app:launchSingleTop="true"
            app:popUpTo="@id/scanner"
            app:popUpToInclusive="true" />
        <argument
            android:name="quantity"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="barcode"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="floor"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="date"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="cycleCountId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/input"
        android:name="com.glaukous.views.input.Input"
        android:label="Input" >
        <action
            android:id="@+id/action_input_to_home"
            app:destination="@id/home"
            app:launchSingleTop="true"
            app:popUpTo="@id/navGraph"
            app:popUpToInclusive="true" />
        <argument
            android:name="barcode"
            app:argType="string" />
        <action
            android:id="@+id/action_input_to_scanner"
            app:destination="@id/scanner" />
        <argument
            android:name="quantity"
            app:argType="integer" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="floor"
            app:argType="string" />
        <argument
            android:name="cycleCountId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>


</navigation>